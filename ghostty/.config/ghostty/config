copy-on-select = clipboard
theme = Catppuccin Frappe
macos-titlebar-style = tabs

# Modifier + Enter keybindings
# shift+enter sends a newline
keybind = shift+enter=text:\n

# ctrl+enter sends a newline
keybind = ctrl+enter=text:\n

# Alternative: Use 'unconsumed:' prefix to pass through to applications
# keybind = unconsumed:shift+enter=ignore
# keybind = unconsumed:ctrl+enter=ignore
