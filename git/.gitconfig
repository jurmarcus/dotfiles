[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true

[merge]
	conflictstyle = zdiff3
	tool = nvimdiff

[mergetool]
	keepBackup = false

[mergetool "nvimdiff"]
	cmd = nvim -d "$LOCAL" "$MERGED" "$REMOTE"

[diff]
	colorMoved = default
	algorithm = histogram
	tool = nvimdiff

[difftool]
	prompt = false

[difftool "nvimdiff"]
	cmd = nvim -d "$LOCAL" "$REMOTE"
[user]
	name = jurmarcus
	email = me@jurmarcus.com
[init]
	defaultBranch = main
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[fetch]
	prune = true
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
