// Terminal layout with zjstatus - Catppuccin Frappé theme
// Based on https://github.com/merikan/.dotfiles

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zjstatus" {
                // -- Catppuccin Frappé --
                color_rosewater "#f2d5cf"
                color_flamingo "#eebebe"
                color_pink "#f4b8e4"
                color_mauve "#ca9ee6"
                color_red "#e78284"
                color_maroon "#ea999c"
                color_peach "#ef9f76"
                color_yellow "#e5c890"
                color_green "#a6d189"
                color_teal "#81c8be"
                color_sky "#99d1db"
                color_sapphire "#85c1dc"
                color_blue "#8caaee"
                color_lavender "#babbf1"
                color_text "#c6d0f5"
                color_subtext1 "#b5bfe2"
                color_subtext0 "#a5adce"
                color_overlay2 "#949cbb"
                color_overlay1 "#838ba7"
                color_overlay0 "#737994"
                color_surface2 "#626880"
                color_surface1 "#51576d"
                color_surface0 "#414559"
                color_base "#303446"
                color_mantle "#292c3c"
                color_crust "#232634"

                format_left   "#[bg=$sapphire,fg=$crust,bold] {session} #[bg=$surface0] {mode}#[bg=$surface0] {tabs}"
                format_center "{notifications}"
                format_right  "#[bg=$flamingo,fg=$crust,bold] {command_user}@{command_host} #[bg=$surface0] #[bg=$maroon,fg=$crust,bold] {datetime} "
                format_space  "#[bg=$surface0]"
                format_hide_on_overlength "true"
                format_precedence "lrc"

                border_enabled  "false"
                border_char     "─"
                border_format   "#[bg=$surface0]{char}"
                border_position "top"

                hide_frame_for_single_pane "true"

                mode_normal        "#[bg=$green,fg=$crust,bold] NORMAL "
                mode_tmux          "#[bg=$mauve,fg=$crust,bold] TMUX "
                mode_locked        "#[bg=$red,fg=$crust,bold] LOCKED "
                mode_pane          "#[bg=$teal,fg=$crust,bold] PANE "
                mode_tab           "#[bg=$teal,fg=$crust,bold] TAB "
                mode_scroll        "#[bg=$flamingo,fg=$crust,bold] SCROLL "
                mode_enter_search  "#[bg=$flamingo,fg=$crust,bold] SEARCH "
                mode_search        "#[bg=$flamingo,fg=$crust,bold] SEARCH "
                mode_resize        "#[bg=$yellow,fg=$crust,bold] RESIZE "
                mode_rename_tab    "#[bg=$yellow,fg=$crust,bold] RENAME "
                mode_rename_pane   "#[bg=$yellow,fg=$crust,bold] RENAME "
                mode_move          "#[bg=$yellow,fg=$crust,bold] MOVE "
                mode_session       "#[bg=$pink,fg=$crust,bold] SESSION "
                mode_prompt        "#[bg=$pink,fg=$crust,bold] PROMPT "

                tab_normal              "#[bg=$blue,fg=$crust,bold] {index} {name}{floating_indicator} "
                tab_normal_fullscreen   "#[bg=$blue,fg=$crust,bold] {index} {name}{fullscreen_indicator} "
                tab_normal_sync         "#[bg=$blue,fg=$crust,bold] {index} {name}{sync_indicator} "
                tab_active              "#[bg=$peach,fg=$crust,bold] {index} {name}{floating_indicator} "
                tab_active_fullscreen   "#[bg=$peach,fg=$crust,bold] {index} {name}{fullscreen_indicator} "
                tab_active_sync         "#[bg=$peach,fg=$crust,bold] {index} {name}{sync_indicator} "
                tab_separator           "#[bg=$surface0] "

                tab_sync_indicator       " *"
                tab_fullscreen_indicator " [+]"
                tab_floating_indicator   ""

                notification_format_unread "#[bg=$yellow,fg=$crust,bold] {message} "
                notification_format_no_notifications ""
                notification_show_interval "10"

                command_host_command    "hostname -s"
                command_host_format     "{stdout}"
                command_host_interval   "0"
                command_host_rendermode "static"

                command_user_command    "whoami"
                command_user_format     "{stdout}"
                command_user_interval   "0"
                command_user_rendermode "static"

                datetime          "{format}"
                datetime_format   "%Y-%m-%d %H:%M"
                datetime_timezone "Asia/Tokyo"
            }
        }
    }
}
