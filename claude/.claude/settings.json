{
  "fileSuggestion": {
    "type": "command",
    "command": "fd --type f --hidden --exclude .git --exclude node_modules --exclude target --exclude __pycache__ --exclude .sl"
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0"
  },
  "attribution": {
    "commit": "\nCo-Authored-By: Claude <noreply@anthropic.com>"
  },
  "permissions": {
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/enforce-justfile.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/enforce-package-managers.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/pre-commit-checks.sh",
            "timeout": 60
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/session-start-context.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/session-summary.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/lsp-check-after-edit.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/format-on-edit.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/test-after-edit.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/layer-validation.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "/Users/methylene/.claude/hooks/react-inline-component-check.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "MSG=$(cat | python3 -c \"import sys,json; print(json.load(sys.stdin).get('message','Claude needs attention'))\" 2>/dev/null || echo 'Claude needs attention'); osascript -e \"display notification \\\"$MSG\\\" with title \\\"Claude Code\\\" sound name \\\"Glass\\\"\"",
            "async": true
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "A teammate is about to go idle. Check the shared task list for unclaimed pending tasks. If there are unblocked tasks the teammate could work on, exit with code 2 and tell them to claim one. If all tasks are done or claimed, allow idle.",
            "timeout": 15
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Team\" sound name \"Glass\"'",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/statusline.sh"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": false,
    "pyright-lsp@claude-plugins-official": false,
    "agent-sdk-dev@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": false,
    "swift-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true
  },
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "考え中",
      "頑張っている",
      "Conjuring",
      "Weaving",
      "Orchestrating",
      "Brewing",
      "Mulling over"
    ]
  },
  "skipDangerousModePermissionPrompt": true
}
